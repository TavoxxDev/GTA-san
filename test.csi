{$CLEO .csi}

:MAIN
wait 0

if
Actor.Defined($PLAYER_ACTOR)
then
    0470: 0@ = actor $PLAYER_ACTOR current_weapon
    if
    0@ == 0
    then
        if
        Actor.Animation($PLAYER_ACTOR) == "FIGHT_SHADOWBOX"
        then
            Model.Load(#RHINO)
            :LOAD
            wait 0
            if
            not Model.Available(#RHINO)
            jf @LOAD

            04C4: store_coords_to 1@ 2@ 3@ from_actor $PLAYER_ACTOR with_offset 0.0 6.0 0.5
            00A5: create_car #RHINO at 1@ 2@ 3@

            Model.Release(#RHINO)

            wait 3000
        end
    end
end

jump @MAIN
